<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>@ViewBag.Title - 智誠服飾店</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Content/Images/Brand_logo.png" alt="" width="100" height="80">                    
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item h3">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index", "Employee")">人資管理</a>
                        </li>
                        <li class="nav-item h3">
                            <a class="nav-link" href="@Url.Action("Index", "Product")">產品管理</a>
                        </li>
                        <li class="nav-item h3">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index", "Purchases")">進貨管理</a>
                        </li>
                        <li class="nav-item h3">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index", "Sales")">銷售管理</a>
                        </li>
                        <li class="nav-item h3">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index", "stock")">存貨管理</a>
                        </li>
                        @*<li class="nav-item h3">
                            <a class="nav-link" href="@Url.Action("Login", "Account")" tabindex="-1" aria-disabled="true">登入</a>
                        </li>*@
                    </ul>
                    @if (System.Web.HttpContext.Current.Session["UserName"] != null)
                    {
                        <div class="d-flex">
                            <h4>@System.Web.HttpContext.Current.Session["EmployeeName"], 您好</h4>
                            &nbsp;
                            <a class="btn btn-outline-secondary" href="@Url.Action("Logout", "Account")">登出</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>


    <div class="container">


        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 智誠服飾店</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/DataTables")
    @Scripts.Render("~/bundles/Common")
    @RenderSection("scripts", required: false)
</body>
</html>
