<!--Warning Modal 刪除時跳出的警告視窗-->
<div class="modal fade" id="warningModal" tabindex="-1" aria-labelledby="warningModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="warningModalLabel">警告</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <input type="hidden" id="deleteID" />
            <div class="modal-body" id="warningModalBody">
                確定刪除資料？
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-danger" id="deleteSendBtn">確認刪除</button>
            </div>
        </div>
    </div>
</div>

<!--inform Modal 新增或修改後跳出的通知視窗 -->
<div class="modal fade" id="informModal" tabindex="-1" aria-labelledby="informModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="informModalLabel">通知</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <input type="hidden" id="deleteID" />
            <div class="modal-body" id="informModalBody">
                通知訊息
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">確認</button>
            </div>
        </div>
    </div>
</div>

@section  scripts{
    <script>
        $(document).ready(function () {
            //這裡是資料列表，在這裡調整欄位
            var dataTable = $("#demoGrid").DataTable({
                                "processing": true, // for show progress bar
                                "serverSide": true, // for process server side
                                "filter": true, // this is for disable filter (search box)
                                "orderMulti": false, // for disable multiple column at once
                                "pageLength": 10, //一頁顯示幾筆

                                "ajax": {
                                    "url": "/Role/LoadAllData",
                                    "type": "POST",
                                    "datatype": "json"
                                },

                                "columns": [
                                    { "data": "RoleID", "name": "RoleID", "autoWidth": true },
                                    { "data": "RoleName", "name": "RoleName", "autoWidth": true },
                                    {
                                        "render": function (data, type, row, meta) {
                                            @if (SE_No1.Utilities.CommonCodes.checkAuth("Role", "Update") && SE_No1.Utilities.CommonCodes.checkAuth("Role", "Delete"))
                                            {
                                                <text>
                                            return '<a class="btn btn-outline-primary" onclick="editBtnClick(\'' + row.RoleID + '\')" href="#">修改</a> | '
                                                + '<a class="btn btn-outline-danger" onclick="deleteBtnClick(\'' + row.RoleID + '\')" href="#">刪除</a>';
                                                </text>
                                            }
                                            else if (!SE_No1.Utilities.CommonCodes.checkAuth("Role", "Update") && SE_No1.Utilities.CommonCodes.checkAuth("Role", "Delete"))
                                            {
                                                <text>
                                            return '<a class="btn btn-outline-primary" onclick="editBtnClick(\'' + row.RoleID + '\')" href="#">修改</a>';
                                                </text>
                                            }
                                            else if (SE_No1.Utilities.CommonCodes.checkAuth("Role", "Update") && !SE_No1.Utilities.CommonCodes.checkAuth("Role", "Delete"))
                                            {
                                                <text>
                                            return '<a class="btn btn-outline-danger" onclick="deleteBtnClick(\'' + row.RoleID + '\')" href="#">刪除</a>';
                                                </text>
                                            }
                                            else
                                            {
                                                <text>
                                            return '@SE_No1.Utilities.Message.permissionDenied';
                                                </text>
                                            }
                                        }
                                    },
                                ]
            });

            //點擊新增資料按鈕，跳出表單給使用者輸入
            $('#createBtn').on('click', function () {
                //這裡要把所有表單資料清空
                $('#dataForm').trigger("reset");
                $('#dataForm').removeClass('was-validated'); //隱藏驗證文字


                $('#detailModalLabel').html('新增資料'); //視窗標題
                $('#editSendBtn').hide(); //隱藏確認修改按鈕
                $('#createSendBtn').show(); //顯示確認新增按鈕
                $('#detailModal').modal('show'); //顯示表單視窗
            });

            //點擊確認新增按鈕，送出表單
            $('#createSendBtn').on('click', function () {
                if (!$('#dataForm')[0].checkValidity()) {
                    $('#dataForm').addClass('was-validated'); //顯示驗證文字
                }
                else {
                    var datas = getFormData($('#dataForm'));
                    datas['RoleID'] = -1; //避免roleID null出錯給他一個值
                    $.ajax({
                        method: "POST",
                        url: '@Url.Action("Create", "Role")',
                        dataType: 'json',
                        data: datas,
                    }).done(function (data) {
                        if (data.success) {
                            $('#informModalBody').html(data.successMsg); //通知訊息
                            $('#detailModal').modal('toggle'); //關閉資料表單視窗
                        }
                        else {
                            $('#informModalBody').html(data.errorMsg); //通知訊息
                        }
                        $('#informModal').modal('show'); //顯示通知
                        dataTable.ajax.reload(); //刷新列表
                    });
                }
            });

            //點擊確認刪除按鈕，刪除資料
            $('#deleteSendBtn').on('click', function () {
                $('#warningModal').modal('toggle'); //關閉刪除警告視窗

                $.ajax({
                    method: "POST",
                    url: '@Url.Action("Delete", "Role")',
                    dataType: 'json',
                    data: {
                        RoleID: $('#deleteID').val()
                    },
                }).done(function (data) {
                    if (data.success) {
                        $('#informModalBody').html(data.successMsg); //通知訊息
                    }
                    else {
                        $('#informModalBody').html(data.errorMsg); //通知訊息
                    }
                    $('#informModal').modal('show'); //顯示通知
                    dataTable.ajax.reload(); //刷新列表
                });
            });

            //點擊確認修改按鈕，送出表單
            $('#editSendBtn').on('click', function () {
                if (!$('#dataForm')[0].checkValidity()) {
                    $('#dataForm').addClass('was-validated'); //顯示驗證文字
                }
                else {
                    var datas = getFormData($('#dataForm'));
                    $.ajax({
                        method: "POST",
                        url: '@Url.Action("Edit", "Role")',
                        dataType: 'json',
                        data: datas,
                    }).done(function (data) {
                        if (data.success) {
                            $('#informModalBody').html(data.successMsg); //通知訊息
                            $('#detailModal').modal('toggle'); //關閉資料表單視窗
                        }
                        else {
                            $('#informModalBody').html(data.errorMsg); //通知訊息
                        }
                        $('#informModal').modal('show'); //顯示通知
                        dataTable.ajax.reload(); //刷新列表
                    });
                }
            });

            //將checkbox勾選值改為true
            $('#dataForm :checkbox').each(function () {
                $(this).on('change', function () {
                    if ($(this).is(':checked')) {
                        $(this).attr('value', 'true');
                    } else {
                        $(this).attr('value', 'false');
                    }
                });
            });
        });

        //點擊刪除按鈕，跳出確認視窗
        function deleteBtnClick(ID) {
            $('#warningModal').modal('show'); //顯示警告
            $('#deleteID').val(ID); //設定要刪除的資料ID
        }

        //點擊修改按鈕，跳出表單給使用者輸入
        function editBtnClick(ID) {
            $('#dataForm').removeClass('was-validated'); //隱藏驗證文字
            //抓取原資料內容顯示，供修改
            $.ajax({
                method: "POST",
                url: '@Url.Action("GetDataByID", "Role")',
                dataType: 'json',
                data: {
                    RoleID: ID
                },
            }).done(function (data) {
                //這裡要把所有表單資料顯示，會依據不同模組顯示不同資料
                $('#RoleIDControlInput').val(data.RoleID);
                $('#RoleNameControlInput').val(data.RoleName);
                $('#EmployeeCreateSwitch').prop('checked', data.EmployeeCreate);
                $('#EmployeeDeleteSwitch').prop('checked', data.EmployeeDelete);
                $('#EmployeeUpdateSwitch').prop('checked', data.EmployeeUpdate);
                $('#EmployeeRetrieveSwitch').prop('checked', data.EmployeeRetrieve);
                $('#SalesCreateSwitch').prop('checked', data.SalesCreate);
                $('#SalesDeleteSwitch').prop('checked', data.SalesDelete);
                $('#SalesUpdateSwitch').prop('checked', data.SalesUpdate);
                $('#SalesRetrieveSwitch').prop('checked', data.SalesRetrieve);
                $('#StockCreateSwitch').prop('checked', data.StockCreate);
                $('#StockDeleteSwitch').prop('checked', data.StockDelete);
                $('#StockUpdateSwitch').prop('checked', data.StockUpdate);
                $('#StockRetrieveSwitch').prop('checked', data.StockRetrieve);
                $('#PurchasesCreateSwitch').prop('checked', data.PurchasesCreate);
                $('#PurchasesDeleteSwitch').prop('checked', data.PurchasesDelete);
                $('#PurchasesUpdateSwitch').prop('checked', data.PurchasesUpdate);
                $('#PurchasesRetrieveSwitch').prop('checked', data.PurchasesRetrieve);
                $('#ProductCreateSwitch').prop('checked', data.ProductCreate);
                $('#ProductDeleteSwitch').prop('checked', data.ProductDelete);
                $('#ProductUpdateSwitch').prop('checked', data.ProductUpdate);
                $('#ProductRetrieveSwitch').prop('checked', data.ProductRetrieve);
                $('#RoleCreateSwitch').prop('checked', data.RoleCreate);
                $('#RoleDeleteSwitch').prop('checked', data.RoleDelete);
                $('#RoleUpdateSwitch').prop('checked', data.RoleUpdate);
                $('#RoleRetrieveSwitch').prop('checked', data.RoleRetrieve);
                $('#RetailerCreateSwitch').prop('checked', data.RetailerCreate);
                $('#RetailerDeleteSwitch').prop('checked', data.RetailerDelete);
                $('#RetailerUpdateSwitch').prop('checked', data.RetailerUpdate);
                $('#RetailerRetrieveSwitch').prop('checked', data.RetailerRetrieve);
                $('#SupplierCreateSwitch').prop('checked', data.SupplierCreate);
                $('#SupplierDeleteSwitch').prop('checked', data.SupplierDelete);
                $('#SupplierUpdateSwitch').prop('checked', data.SupplierUpdate);
                $('#SupplierRetrieveSwitch').prop('checked', data.SupplierRetrieve);
                //將checkbox勾選值改為true
                $('#dataForm :checkbox').each(function () {
                    if ($(this).is(':checked')) {
                        $(this).attr('value', 'true');
                    } else {
                        $(this).attr('value', 'false');
                    }
                });
            });

            $('#detailModalLabel').html('修改資料'); //視窗標題
            $('#editSendBtn').show(); //顯示確認修改按鈕
            $('#createSendBtn').hide(); //隱藏確認新增按鈕
            $('#detailModal').modal('show'); //顯示表單視窗
        }
    </script>
}